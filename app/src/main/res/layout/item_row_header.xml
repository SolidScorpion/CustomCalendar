<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/header_width"
    android:layout_height="@dimen/cell_height"
    android:background="@color/usualDay"
    android:orientation="vertical">

    <TextView
        android:id="@+id/roomHeaderTv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/room_header_size"
        tools:text="asdas" />

    <TextView
        android:gravity="center"
        android:id="@+id/roomCategory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/room_category_size"
        android:textStyle="bold"
        android:text="BSD" />

</LinearLayout>